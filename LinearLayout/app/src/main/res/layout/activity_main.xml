<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bannerTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Sorteador de Nomes"
            android:gravity="center"
            android:fontFamily="@font/bebas_neue"
            android:textSize="40sp"
            android:background="#6633CC"
            android:textColor="#ffff" />

        <EditText
            android:id="@+id/inserirNomes"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:hint="Insira aqui os nomes" />

        <Button
            android:id="@+id/botaoAdicionar"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="#6633CC"
            android:text="Adicionar"
            android:autoSizeTextType="uniform" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/botaoSortear"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="#6633CC"
            android:text="Sortear!"
            android:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/nomeSorteado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/bebas_neue"
            android:textSize="60sp"
            android:textColor="#6633CC"
            android:textAlignment="center" />


    </LinearLayout>
</ScrollView>